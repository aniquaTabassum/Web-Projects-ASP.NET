
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Main css -->
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="login-page">
        <div class="form">
            <form class="register-form">
            </form>
            <form class="login-form">
                @Html.TextBox("Username", null, new { placeholder = "Username", @class = "login.css" })
                @Html.Password("Password", null, new { placeholder = "Password", @class = "login.css" })
                <div class="form-submit">
                    <button type="submit" value="Submit" class="submit" id="submit" name="submit" onclick="">Login</button>
                </div>
                <p class="message">Not registered? <a href="http://localhost:64907/Register/Register">Create an account</a></p>
            </form>
        </div>
    </div>
 
        <img class="coffee-image" src="~/images/coffee.gif" alt="">
</body>
</html>
