@model ReadingCat.Models.DatabaseCombinedWithOtherModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Main css -->
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="login-page">
        <div class="form">
            <form class="register-form">
            </form>
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
        <form class="login-form">
            @Html.EditorFor(model => model.LoginModel.username, new { htmlAttributes = new { @class = "login.css", @placeholder = "username" } })
            @Html.ValidationMessageFor(model => model.LoginModel.username);
            @Html.PasswordFor(model => model.LoginModel.password, new { htmlAttributes = new { @class = "login.css",  @placeholder = "password", @Autocomplete= "off" } })
      
            @Html.ValidationMessageFor(model => model.LoginModel.password);
            <div class="form-submit">
                <button type="submit" value="Submit" class="submit" id="submit" name="submit">Login</button>
            </div>
            <p class="message">Not registered? <a href="http://localhost:64907/Register/Register">Create an account</a></p>
        </form>
            }
        </div>
    </div>
 
        <img class="coffee-image" src="~/images/coffee.gif" alt="">
</body>
</html>
